@model FastFood.Web.ViewModels.Employees.RegisterEmployeeInputModel
@{
    ViewData["Title"] = "Register Employee";
    IList<SelectListItem> Positions = TempData["Positions"] as List<SelectListItem>; // i dont like this way of doing it but if i want to have validation for the input model i have to give this data through somewhere else
}
<h1 class="text-center">Register Employee</h1>
<hr class="bg-secondary half-width" />
<form class="mx-auto half-width" asp-controller="Employees" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" class="form-control" placeholder="Name..." asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input type="number" step="1" min="18" class="form-control" asp-for="Age"/>
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PositionId">Position Name</label>
        <select asp-for="PositionId" asp-items="Positions" class="form-control"></select>
        <span asp-validation-for="PositionId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input type="text" class="form-control" placeholder="Address..." asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <hr class="bg-secondary half-width" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Register</button>
        <a asp-controller="Employees" asp-action="All" class="btn btn-default">All employees</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
