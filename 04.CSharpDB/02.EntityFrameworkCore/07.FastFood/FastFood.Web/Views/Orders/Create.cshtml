@model FastFood.Web.ViewModels.Orders.CreateOrderViewModel

@{
    ViewData["Title"] = "Create Order";
}
<h1 class="text-center">Create Order</h1>
<hr class="bg-secondary half-width" />
<form class="mx-auto half-width" asp-controller="Orders" asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label for="name">Customer</label>
        <input type="text" class="form-control" id="customer" placeholder="Customer..." name="customer">
    </div>
    <div class="form-group">
        <label for="employee">Employee</label>
        <select id="employee" class="form-control" name="EmployeeId">
            @foreach (var employee in Model.Employees)
            {
                <option value="@employee.Value">@employee.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="item">Item</label>
        <select id="item" class="form-control" name="ItemId">
            @foreach (var item in Model.Items)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" step="1" min="11" class="form-control" id="quantity" placeholder="Quantity..." name="quantity">
    </div>
    <hr class="bg-secondary half-width" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Orders" asp-action="All" class="btn btn-default">All orders</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
